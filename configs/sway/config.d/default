# set terminal and menu
set $term kitty
set $menu tofi-drun
set $menu2 rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons

# wallpaper
# output * background ~/.config/backgrounds/debdino.png fill
output * background ~/.config/backgrounds/wallhaven-zyj28v_3440x1440.png fill

# rules
for_window [app_id="pavucontrol"] floating enable
for_window [app_id="galculator"] floating enable
for_window [app_id="nwg-look"] floating enable
for_window [app_id="mpv"] floating enable, resize set 1280 720
for_window [app_id="qimgv"] floating enable, resize set 1280 720

# Set Mod key (SUPER is typically the "Windows" key)
set $mainMod Mod4
set $Mod Control

# shortcuts
bindsym $mainMod+n exec swaync-client -t -sw
bindsym $mainMod+r exec tilix -e ranger
bindsym $mainMod+h exec tilix -e ~/.config/sway/keyhelper.sh

# Example binds
bindsym $mainMod+Return exec kitty -e "./.config/scripts/tmux-sessioniser.sh"
bindsym $mainMod+Shift+Return exec $terminal
bindsym $mainMod+Alt+c kill
bindsym $mainMod+Alt+s exit
bindsym $mainMod+Alt+q exec zsh -c "shutdown -h now"
bindsym $mainMod+Alt+h exec zsh -c "systemctl sleep"
bindsym $mainMod+e exec $fileManager
bindsym $mainMod+f floating toggle
bindsym $mainMod+Alt+f fullscreen toggle
bindsym $mainMod+m fullscreen enable
bindsym $mainMod+s exec $menu || pkill wofi
bindsym $mainMod+c layout toggle split
bindsym $mainMod+v split toggle
bindsym $mainMod+Alt+m exec $disableLaptopDisplay || pkill waybar || waybar & || $enableHdmiDisplay
bindsym $mainMod+Alt+e exec $disableHdmiDisplay || pkill waybar || wayber &
bindsym $mainMod+Alt+w exec pkill waybar || waybar &
bindsym $mainMod+Alt+r exec swaymsg output HDMI-A-1 resolution 1920x1080@120 position 0 0
bindsym $mainMod+Shift+s exec grim -g "$(slurp)" "$HOME/Pictures/ScreenShots/screenshot_$(date).png"

# Applications
bindsym $Mod+Alt+f exec firefox
bindsym $Mod+Alt+0 exec obs
bindsym $Mod+Alt+1 exec pavucontrol
bindsym $Mod+Alt+3 exec blueman-manager
bindsym $Mod+Alt+o exec flatpak run md.obsidian.Obsidian
bindsym $Mod+Alt+k exec flatpak run dev.bragefuglseth.Keypunch
bindsym $Mod+Alt+a exec flatpak run org.moneymanagerex.MMEX
bindsym $Mod+Alt+s exec zsh -c "./Documents/Applications/Anki-Run-Script/runAnki.sh"
bindsym $Mod+Alt+d exec flatpak run dev.vencord.Vesktop
bindsym $Mod+Alt+m exec betterbird
bindsym $Mod+Alt+e exec microsoft-edge-stable
bindsym $Mod+Alt+v exec vlc
bindsym $Mod+Alt+b exec flatpak run org.gnome.Boxes

# Volume Control
bindsym Alt+Shift+2 exec $increasevolume
bindsym Alt+Shift+4 exec $decreasevolume
bindsym Alt+Shift+s exec $mutevolume
bindsym Alt+Shift+1 exec $increasevolumeby1
bindsym Alt+Shift+3 exec $decreasevolumeby1

# Move focus with $mainMod + arrow keys
bindsym $mainMod+Left focus left
bindsym $mainMod+Right focus right
bindsym $mainMod+Up focus up
bindsym $mainMod+Down focus down

# Alt+Tab for cycling windows
bindsym Alt+Tab focus next
bindsym Alt+Shift+Tab focus prev

# Switch workspaces with $mainMod + [0-9]
bindsym $mainMod+1 workspace number 1
bindsym $mainMod+2 workspace number 2
bindsym $mainMod+3 workspace number 3
bindsym $mainMod+4 workspace number 4
bindsym $mainMod+5 workspace number 5
bindsym $mainMod+6 workspace number 6
bindsym $mainMod+7 workspace number 7
bindsym $mainMod+8 workspace number 8
bindsym $mainMod+9 workspace number 9
bindsym $mainMod+0 workspace number 10

# Move active window to a workspace with $mainMod + Shift + [0-9]
bindsym $mainMod+Shift+1 move container to workspace number 1
bindsym $mainMod+Shift+2 move container to workspace number 2
bindsym $mainMod+Shift+3 move container to workspace number 3
bindsym $mainMod+Shift+4 move container to workspace number 4
bindsym $mainMod+Shift+5 move container to workspace number 5
bindsym $mainMod+Shift+6 move container to workspace number 6
bindsym $mainMod+Shift+7 move container to workspace number 7
bindsym $mainMod+Shift+8 move container to workspace number 8
bindsym $mainMod+Shift+9 move container to workspace number 9
bindsym $mainMod+Shift+0 move container to workspace number 10

# Scroll through existing workspaces with $mainMod + scroll
bindsym $mainMod+Button4 workspace prev
bindsym $mainMod+Button5 workspace next
bindsym $mainMod+Tab workspace next
bindsym $mainMod+Shift+Tab workspace prev

# Move/resize windows with $mainMod + LMB/RMB and dragging
mode "resize" {
    bindsym Button1 resize
    bindsym Button3 move
}
bindsym $mainMod+Button1 mode "resize"
bindsym $mainMod+Button3 mode "resize"
# windows
bindsym $mainMod+q kill
bindsym $mainMod+Shift+r reload; exec notify-send 'sway' 'Restarted'
bindsym $mainMod+Shift+q exit

# move window
bindsym $mainMod+Shift+Left move left
bindsym $mainMod+Shift+Right move right
bindsym $mainMod+Shift+Up move up
bindsym $mainMod+Shift+Down move down

# resize window
bindsym $mainMod+Ctrl+Left resize shrink width 20px
bindsym $mainMod+Ctrl+Right resize grow width 20px

# audio
bindsym $mainMod+Insert exec ~/scripts/changevolume up
bindsym $mainMod+Delete exec ~/scripts/changevolume down
bindsym $mainMod+Shift+m exec ~/scripts/changevolume mute

#
#
# Screen Capture
bindsym Print exec grim ~/Screenshots/$(date +"%Y-%m-%d_%H-%M-%S").png; exec notify-send 'Grim' 'Image saved to ~/Screenshots'
bindsym $mainMod+Print exec grim -g "$(slurp)" ~/Screenshots/$(date +"%Y-%m-%d_%H-%M-%S").png; exec notify-send 'Grim' 'Selected image saved to ~/Screenshots'

### Gaps
gaps inner 16
gaps outer 1
default_border pixel 3

### Borders
client.focused          #bd93f9 #bd93f9 #282a36 #bd93f9 #bd93f9
client.focused_inactive #282a36 #282a36 #bd93f9 #282a36 #282a36
client.unfocused        #282a36 #282a36 #bd93f9 #282a36 #282a36
client.urgent           #ff5555 #ff5555 #282a36 #ff5555 #ff5555
client.placeholder      #282a36 #282a36 #bd93f9 #282a36 #282a36
client.background       #282a36

bar {
     swaybar_command waybar
     }
#GTK issue
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK
